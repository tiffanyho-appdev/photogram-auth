<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Username
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>

        <td>
          <%= user.username %>
        </td>

        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
